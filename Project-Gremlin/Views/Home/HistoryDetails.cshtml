@model Project_Gremlin.Models.ViewModels.HistoryDetailsVM
<div class="back-image">
    <input asp-for="@Model.MiniHistory.Id" hidden />
    <div class="container-fluid title" style="background-image: url('@Url.Content("~/Images/miniHistory/" + @Model.MiniHistory.historyImage)'); background-repeat: no-repeat; background-size: cover; background-position: 50% 30%;">
        <div class="huge-space"></div>
        <div class="huge-space"></div>
        <div class="huge-space"></div>
        <div class="medium-space"></div>
        <h1 class="container head-title">History: @Model.MiniHistory.Name</h1>
        <div class="medium-space"></div>
        <div class="medium-space"></div>
    </div>
    <div class="container box-color">
        <div class="story-body">
            <hr />
            <div class="">@Html.Raw(Model.MiniHistory.historyBody)</div>
            <hr />
        </div>
    </div>
</div>